<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@drawable/background_care_tips_gradient">

    <TextView
        android:id="@+id/tv_report_care_tips_title"
        style="@style/AppTextLabel2.PurplePink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="13dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="감정 해소와 마음 정리"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_report_care_tips_caption"
        style="@style/AppTextLabel3.Gray50Blue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="13dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/pretendard_regular"
        android:lineSpacingExtra="4dp"
        android:text="@string/label_care_tips"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_report_care_tips_title" />

</androidx.constraintlayout.widget.ConstraintLayout>