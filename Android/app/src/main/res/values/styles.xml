<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTopBar" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTextTitle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTextTitle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextSubTitle">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="AppTextSubTitle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextLabel1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextLabel1.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextLabel1.Gray60">
        <item name="android:textColor">@color/gray_60</item>
    </style>

    <style name="AppTextLabel1.Gray20">
        <item name="android:textColor">@color/gray_20</item>
    </style>

    <style name="AppTextLabel2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTextLabel2.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextLabel2.PurplePink">
        <item name="android:textColor">@color/purple_pink</item>
    </style>

    <style name="CalenderHeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>
    
    <style name="CalenderWeekText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/gray_60</item>
    </style>

    <style name="CalenderDateText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/gray_55</item>
    </style>

    <style name="RadioButtonText">
        <item name="android:textColor">@color/selector_radio_btn_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <!-- 상단 색 변경 -->
        <item name="colorAccent">@color/white</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@color/white</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/dark_90</item>
        <item name="android:textColorPrimaryInverse">@color/dark_90</item>
        <item name="android:textColorSecondaryInverse">@color/dark_90</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>